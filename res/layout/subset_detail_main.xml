<LinearLayout xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
	android:layout_width="match_parent" 
	android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content" android:layout_height="wrap_content">
         <TextView
            android:layout_marginLeft="30dp" 
            android:paddingTop="@dimen/padding_small"
            android:gravity="left"
            android:text="Original Subset Id"
            android:layout_width="170dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:id="@+id/sctDetailid"
            android:padding="3dip"
            android:gravity="left"
            android:layout_width="220dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="xxxx"
            />
        <TextView
            android:layout_marginLeft="30dp" 
            android:paddingTop="2dp"
            android:gravity="left"
            android:text="Current Subset Id"
            android:layout_width="170dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/sctSubsetId"
            android:padding="3dip"
            android:gravity="left"
            android:text="Version"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </TableRow>
        
        <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="30dp" 
            android:paddingTop="2dp"
            android:gravity="left"
            android:text="Status"
            android:layout_width="100px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:id="@+id/sctDetailStatus"
            android:padding="3dip"
            android:gravity="left"
            android:text="Version"
            android:layout_width="220dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_marginLeft="30dp" 
            android:paddingTop="2dp"
            android:gravity="left"
            android:text="Current Version"
            android:layout_width="170dp"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView
            android:id="@+id/vocabDetailVersion"
            android:padding="3dip"
            android:gravity="left"
            android:text="Version"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </TableRow>

        <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="30dp" 
            android:paddingTop="2dp"
            android:gravity="left"
            android:text="Type"
            android:layout_width="170dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:id="@+id/sctDetailType"
            android:padding="3dip"
            android:gravity="left"
            android:text="Type"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        </TableRow>

    </TableLayout>

	<ListView android:id="@+id/lvList" 
	    android:paddingTop="@dimen/padding_large" 
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/border">
	</ListView>
</LinearLayout>