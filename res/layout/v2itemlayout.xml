<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="2dp" xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/tvV2Table" android:layout_width="0dp"
		android:layout_height="wrap_content" 
		android:layout_weight="1"
		android:layout_marginLeft="30dp" 
		android:text="@string/empty" 
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/tvV2Name" android:layout_width="0dp"
		android:layout_height="wrap_content" 
		android:layout_weight="2"
		android:text="@string/empty" 
		android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/tvV2Count" android:layout_width="0dp"
		android:layout_height="wrap_content" 
		android:layout_gravity="right" 
		android:layout_marginRight="30dp" 
		android:layout_weight="1" 
		android:gravity="right" 
		android:text="@string/empty" 
		android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>
