<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="horizontal"
	android:layout_width="match_parent" android:layout_height="match_parent"
	android:padding="2dp" xmlns:android="http://schemas.android.com/apk/res/android">

	<TextView android:id="@+id/tvOid" android:layout_width="0dp"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:layout_marginLeft="30dp" 
		android:text="@string/empty" android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/tvOidName" android:layout_width="0dp"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/empty" android:textAppearance="?android:attr/textAppearanceMedium" />

	<TextView android:id="@+id/tvOidDesc" android:layout_width="0dp"
		android:layout_height="wrap_content" android:layout_weight="1"
		android:text="@string/empty" android:textAppearance="?android:attr/textAppearanceMedium" />
</LinearLayout>
